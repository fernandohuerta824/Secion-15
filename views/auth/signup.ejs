<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/header.ejs') %>
   
    <main>
        <form class="login-form" action="/signup" method="POST">
            <div class="form-control <%= values.firstName.class %>">
                <%- include('../includes/error.ejs', error = values.firstName.error) %>
                <label for="firstName">First name: </label>
                <input type="text" name="firstName" id="firstName" value="<%= values.firstName.value ? values.firstName.value : ''%>">
            </div>
            <div class="form-control <%= values.lastName.class %>">
                <%- include('../includes/error.ejs', error = values.lastName.error) %>
                <label for="lastName">Last name: </label>
                <input type="text" name="lastName" id="lastName" value="<%= values.lastName.value ? values.lastName.value : '' %>">
            </div>
            <div class="form-control <%= values.email.class %>">
                <label for="email">E-Mail</label>
                <%- include('../includes/error.ejs', error = values.email.error) %>
                <input type="email" name="email" id="email" value="<%= values.email.value ? values.email.value : ''%>">
            </div>
            <div class="form-control <%= values.password.class %>">
                <%- include('../includes/error.ejs', error = values.password.error) %>
                <label for="password">Password</label>
                <input type="password" name="password" id="password" value="<%= values.password.value ? values.password.value : ''%>">
            </div>
            <div class="form-control <%= values.password.class %>">
                <%- include('../includes/error.ejs', error = values.password.error) %>
                <label for="confirmPassword">Confirm Password</label>
                <input type="password" name="confirmPassword" id="confirmPassword">
            </div>
            <input type="hidden" name="_csrfSignup" value="<%= locals.csrfToken %>">
            <button class="btn" type="submit">Signup</button>
        </form>
    </main>
<%- include('../includes/footer.ejs') %>